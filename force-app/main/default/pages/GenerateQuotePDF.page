<apex:page standardController="quote" extensions="QuotePDFController" applyHtmlTag="false" showHeader="false" renderAs="PDF">
    <html>
        
        <head></head>
        
        <body style="font-family:sans-serif;">
            <span style="font-size: 35px;Color:#004269;margin-left:85%;font-weight: bold;">Quote</span>
            <table style="width:100%">
                <tr>
                    <td><apex:image id="logo2" value="{!$Resource.SLIPLogo}" width="180" height="90"/></td>
                    <!-- <td><img src="SlipLogo.jpg" alt="QuotePdf" style="width: 250px;"></td> -->
                    
                    <td style="font:22pt; padding-left:10px; padding-right:140px;"> </td>
                    
                    <td >
                        <table style="width: 100%;">
                            <tr>
                                <td style="text-align: end; padding-right: 16px;">Date</td>
                                <td style="border: 1px solid;padding: 3px 12px">{!quoteDate}</td>
                            </tr>
                            <tr>
                                <td style="text-align: end; padding-right: 16px;">Lead Time In Week</td>
                                <td style="border: 1px solid;padding: 3px 12px"><apex:outputfield value="{!quote.Current_Lead_Time__c}" /></td>
                            </tr>
                            <tr>
                                <td style="text-align: end; padding-right: 16px;">Valid Until</td>
                                <td style="border: 1px solid;padding: 3px 12px"><apex:outputfield value="{!quote.ExpirationDate}" /></td>
                            </tr>                    
                            <tr>
                                <td style="text-align: end; padding-right: 16px;">Quote #</td>
                                <td style="border: 1px solid;padding: 3px 12px"><apex:outputfield value="{!quote.QuoteNumber}" /></td>
                            </tr>
                            <tr>
                                <td style="text-align: end; padding-right: 16px;">Customer ID</td>
                                <td style="border: 1px solid;padding: 3px 12px"><apex:outputfield value="{!quote.Opportunity.Name}" /></td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <div>
                <div style="background-color:#004269; text-align: left;color: white;width:35%;padding: 7px 10px;margin-bottom:8px;">
                    Customer:</div>
                <div style="padding: 0px 10px;font-size:14px;"><apex:outputfield value="{!quote.Opportunity.Name}" /></div>
                <div style="padding: 2px 10px;font-size:14px;"><apex:outputfield value="{!quote.Opportunity.Job_Site_Address__c}" /></div>
                <div style="padding: 2px 10px;font-size:14px;"><apex:outputfield value="{!quote.Opportunity.Job_Site_City__c}" />, &nbsp;<apex:outputfield value="{!quote.Opportunity.Job_Site_State__c}" /></div>
                <div style="padding: 2px 10px;font-size:14px;"><apex:outputfield value="{!quote.Opportunity.Job_Site_Zip__c}" /></div>
            </div>
            <table style="width:100%; border: 2px solid #f3f3f3;margin-bottom: 5px;font-size: 14px;">
                
                <tr style="background-color: #004269;color: white;padding: 7px 10px;">
                    <td style="padding: 5px 5px;text-align:center;">Item </td>
                    <td style="padding: 7px 10px;font-size: 16px;">Description </td>
                    <td style="font-size: 16px;text-align: center;">Single Unit</td>
                    <td style="font-size: 16px;text-align: center;">Line Total</td>
                </tr>
                <apex:variable value="1" var="num"/>
                <apex:repeat var="qli" value="{!QuotelineItem}">
                    <tr></tr>
                    <tr></tr>
                    <tr></tr>
                    <tr>
                        <td style="text-align:center;">{!num} 
							<apex:variable var="num" value="{!VALUE(num) + 1}"/></td>
                        <td style="padding: 2px 10px;background-color: #EBEBEB;">Window Type : &nbsp;<apex:outputfield value="{!qli.Window_type__c}" /></td>
                        <td rowspan="8" style="text-align:right;"><apex:outputfield value="{!qli.UnitPrice}" /></td>
                        <td rowspan="8" style="text-align:right;padding-right: 10px;"><apex:outputfield value="{!qli.TotalPrice}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">Quantity - &nbsp;<apex:outputfield value="{!qli.Quantity}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">Color - &nbsp;<apex:outputfield value="{!qli.Color__c}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">Glass Type - &nbsp;<apex:outputfield value="{!qli.Glass_Type__c}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">Weatherstripping - &nbsp;<apex:outputfield value="{!qli.Weatherstripping__c}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">Top Sash D/L - &nbsp;<apex:outputfield value="{!qli.Top_Sash_D_L_Width__c}" />&nbsp; x &nbsp;<apex:outputfield value="{!qli.Top_Sash_D_L_Height__c}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">
                            <apex:outputPanel rendered="{!IF(qli.Product2.Name != 'Casement',true,false)}">
                                Bottom Sash D/L - &nbsp;<apex:outputfield value="{!qli.Bottom_Sash_D_L_Width__c}" />&nbsp; x &nbsp;<apex:outputfield value="{!qli.Bottom_Sash_D_L_Height__c}" />
                            </apex:outputPanel>
                            
                        </td>
                        
                        <!--<td style="padding: 2px 10px;">Bottom Sash D/L - <apex:outputfield value="{!qli.Bottom_Sash_D_L_Width__c}" />&nbsp; x &nbsp;<apex:outputfield value="{!qli.Bottom_Sash_D_L_Height__c}" /></td>-->
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">...</td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">Top Sash Slip™ - &nbsp;<apex:outputfield value="{!qli.Top_Sash_SLIP__c}" /></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td style="padding: 2px 10px;">
                            <apex:outputPanel rendered="{!IF(qli.Product2.Name != 'Casement',true,false)}">
                                Bottom Sash Slip™ - &nbsp;<apex:outputfield value="{!qli.Bottom_Sash_SLIP__c}" />
                            </apex:outputPanel>
                        </td> 
                    </tr>
                    </apex:repeat>
                
                
            </table>
            
            <table style="width: 100%;font-size: 14px; margin-bottom: 40px;">
                <tr>
                    <td></td>
                    <td></td>
                    <td style="padding: 5px 10px;;background-color: #004269;color: rgb(255, 255, 255);">Special Notes and Instructions</td>
                    <td style="margin: 3px 50px;text-align: right;">Subtotal</td>
                    <td style="margin: 3px 50px;text-align: right;padding-right: 10px;">
                        $<apex:outputText value="{0, number, #,###.00}">
                        <apex:param value="{!quote.TotalPrice}" />
                        </apex:outputText>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="margin: 3px 50px;text-align: right;">crate/ship Cost</td>
                    <td style="margin: 3px 50px;text-align: right;padding-right: 10px;padding-right: 10px;">
                        $<apex:outputText value="{0, number, #,###.00}">
                        <apex:param value="{!quote.Crate_Ship_cost__c}" />
                        </apex:outputText>
                    </td>    
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td style="margin: 3px 50px;font-weight: bold;text-align: right;">Total</td>
                    <td style="margin: 3px 50px;font-weight: bold;text-align: right;padding-right: 10px;">
                        $<apex:outputText value="{0, number, #,###.00}">
                        <apex:param value="{!quote.Total_Price__c}" />
                        </apex:outputText> 
                    </td>
                </tr>
            </table>
            <div>
                <apex:outputfield value="{!docusignTerms.Terms_Condition__c}" /><br/><br/>
            </div>
            <div style="font-weight: bold;font-size: 20px;text-align: center;font-size: 20px; margin-bottom: 20px;">Thank you for your business</div>
            <div style="font-size: 20px;text-align: center;font-size: 14px;">Should you have any enquiries concerning this quote, please contact us at sales@windowslip.com</div>
            <div style="font-size: 20px;text-align: center;font-size: 14px;">or</div>
             <div style="font-size: 20px;text-align: center;font-size: 14px;">call (503) 479-5737</div>
            <div><p style="margin-top:20px; margin-left:85%;">Signed</p></div>
        </body>
        
    </html>
</apex:page>