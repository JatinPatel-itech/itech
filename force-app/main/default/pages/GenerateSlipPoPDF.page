                    </td>
                    <td></td>
                    <td>-</td>
                    <td><apex:outputfield value="{!oIt.Balance_Type__c}" /></td>
                </tr>
                 
                <tr>
                    <td>
                        <apex:outputPanel rendered="{!IF(oIt.Bottom_Sash_D_L_Width__c != '',true,false)}"> 
                            <apex:outputfield value="{!oIt.Quantity}" />
                        </apex:outputPanel>
                    </td>
                    <td>
                        <apex:outputPanel rendered="{!IF(oIt.Bottom_Sash_D_L_Width__c != '',true,false)}"> 
                            <apex:outputfield value="{!oIt.Bottom_Sash_D_L_Width__c}" />&nbsp; x &nbsp;<apex:outputfield value="{!oIt.Bottom_Sash_D_L_Height__c}" /></apex:outputPanel>
                    </td>
                    <td></td>
                    <td>
                        <apex:outputPanel rendered="{!IF(oIt.Bottom_Sash_Order_Width__c != '',true,false)}"> 
                            <apex:outputfield value="{!oIt.Bottom_Sash_Order_Width__c}" />&nbsp; x &nbsp;<apex:outputfield value="{!oIt.Bottom_Sash_Order_Height__c}" />
                        	<span>(<apex:outputfield value="{!oIt.Thickness_bottom__c}" />Slip)</span>
                        </apex:outputPanel>
                    		
                    </td>
                    <td>-</td>
                    <td><apex:outputfield value="{!oIt.Balance_Type__c}" /></td>
                </tr> 
                         
