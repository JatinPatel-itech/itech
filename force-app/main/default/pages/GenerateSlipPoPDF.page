                }
                
                .image {
                text-align: right;
                }
                
                .date {
                margin-bottom: 25px;
                font-size: 16px;
                }
                
                .orderRightJob {
                margin-bottom: 25px;
                font-size: 16px;
                }
                
                .jobName {
                margin-bottom: 25px;
                font-size: 16px;
                }
                
                .message {
                font-weight: bold;
                text-align: center;
                text-decoration: underline;
                margin-bottom: 5px;
